{
	"compilerOptions": {
		"sourceMap": true,
		"noImplicitAny": true,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		//"strict": true,
		"noUnusedLocals": true,
		"module": "commonjs",
		"jsx": "react",
		"jsxFactory": "h",
		"target": "es2017",
		"lib": ["es2017", "dom"]
	},
	"include": [
		"src/*/*.ts",
		"src/*/*.tsx",
		"src/client/scene/Line.tsx",
		"src/client/components/ToolBar/index.tsx",
		"src/client/scene/Image.tsx",
		"src/client/scene/SetPiece.tsx"
	]
}
